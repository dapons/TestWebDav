@model IEnumerable<TestWebApp.Models.Fragment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditUrl)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.OpenUrl)">@Html.DisplayFor(modelItem => item.OpenUrl)</a>
        </td>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.EditUrl)">@Html.DisplayFor(modelItem => item.EditUrl)</a>
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>*@
    </tr>
}

</table>
